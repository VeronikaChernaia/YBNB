<div class="container mt-5">
<h1>New Yacht Listing</h1>

<%= simple_form_for [@yacht] do |f| %>
  <%= f.input :title %>
  <%= f.input :brand %>
  <%= f.input :description %>
  <%= f.input :port %>
  <%= f.input :price_per_hour %>
  <%= f.input :photo, as: :file %>

  <%= f.submit "Add a new yacht listing", class: "btn btn-primary" %>
<% end %>
</div>
